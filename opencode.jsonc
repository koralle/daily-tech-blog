{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["pnpx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    }
  },
  "autoupdate": false,
  "watcher": {
    "ignore": ["node_modules", "dist/**", ".git/*"]
  },
  "permission": {
    "skill": "allow",
    "webfetch": "deny",
    "question": "allow"
  },
  "agent": {
    "plan": {
      "model": "openai/gpt-5.3-codex"
    },
    "build": {
      "model": "zai-coding-plan/glm-4.7"
    },
    "general": {
      "model": "zai-coding-plan/glm-4.7"
    },
    "explore": {
      "model": "zai-coding-plan/glm-4.7"
    }
  }
}
