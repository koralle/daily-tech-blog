---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;

const prevPage = currentPage > 1 ? currentPage - 1 : null;
const nextPage = currentPage < totalPages ? currentPage + 1 : null;
---

<nav>
  <!-- 最初のページ -->
  {currentPage > 1 && <a href={`${baseUrl}/1`}>最初</a>}

  <!-- 前のページ -->
  {prevPage && <a href={`${baseUrl}/${prevPage}`}>前へ</a>}

  <!-- 現在のページ -->
  <span>
    {currentPage}
  </span>

  <!-- 次のページ -->
  {nextPage && <a href={`${baseUrl}/${nextPage}`}>次へ</a>}

  <!-- 最後のページ -->
  {currentPage < totalPages && <a href={`${baseUrl}/${totalPages}`}>最後</a>}
</nav>

<div>
  {totalPages} ページ中 {currentPage} ページ目
</div>
