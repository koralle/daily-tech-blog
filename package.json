{
  "name": "daily-tech-blog",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "lint:check": "oxlint -c oxlintrc.json --tsconfig tsconfig.json --ignore-path .eslintignore",
    "lint:fix": "oxlint -c oxlintrc.json --tsconfig tsconfig.json --ignore-path .eslintignore --fix",
    "lint": "pnpm run lint:check",
    "format:check": "prettier . -c",
    "format:fix": "prettier . -w",
    "format": "pnpm run format:fix",
    "typecheck": "tsgo -p tsconfig.json",
    "check": "run-p typecheck format:check lint:check --aggregate-output -l"
  },
  "dependencies": {
    "next": "15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.3.1",
    "@prettier/plugin-oxc": "^0.0.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript/native-preview": "7.0.0-dev.20250629.1",
    "lefthook": "^1.11.14",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.3.0",
    "pnpm": "^10.12.4",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "wrangler": "^4.22.0"
  }
}
