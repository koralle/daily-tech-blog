{
  "name": "daily-tech-blog",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint:app": "oxlint -c oxlintrc.json --tsconfig tsconfig.app.json --ignore-path .eslintignore",
    "lint:node": "oxlint -c oxlintrc.json --tsconfig tsconfig.node.json --ignore-path .eslintignore",
    "line:app:fix": "oxlint -c oxlintrc.json --tsconfig tsconfig.app.json --ignore-path .eslintignore --fix",
    "line:node:fix": "oxlint -c oxlintrc.json --tsconfig tsconfig.node.json --ignore-path .eslintignore --fix",
    "lint:check": "run-p lint:app lint:node --aggregate-output -l",
    "lint:fix": "run-p lint:*:fix --aggregate-output -l",
    "lint": "pnpm run lint:check",
    "format:check": "prettier . -c",
    "format:fix": "prettier . -w",
    "format": "pnpm run format:fix",
    "typecheck:node": "tsgo -p tsconfig.node.json",
    "typecheck:app": "tsgo -p tsconfig.app.json",
    "typecheck": "run-p typecheck:*"
  },
  "dependencies": {
    "next": "15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript/native-preview": "7.0.0-dev.20250629.1",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.3.0",
    "pnpm": "^10.12.4",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  }
}
