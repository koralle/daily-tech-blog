{
  "name": "daily-tech-blog",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "start": "astro preview",
    "preview": "astro build && wrangler dev",
    "deploy": "astro build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "lint:check": "oxlint -c oxlintrc.json --tsconfig tsconfig.json --ignore-path .eslintignore",
    "lint:fix": "oxlint -c oxlintrc.json --tsconfig tsconfig.json --ignore-path .eslintignore --fix",
    "lint": "pnpm run lint:check",
    "format:check": "prettier . -c",
    "format:fix": "prettier . -w",
    "format": "pnpm run format:fix",
    "typecheck": "astro check --tsconfig tsconfig.json",
    "check": "run-p typecheck format:check lint:check --aggregate-output -l"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.0",
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "astro": "^5.11.0",
    "kiso.css": "^1.2.1",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@prettier/plugin-oxc": "^0.0.4",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.0.7",
    "@typescript/native-preview": "7.0.0-dev.20250630.1",
    "eslint": "^9.30.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-typegen": "^2.2.1",
    "jiti": "^2.4.2",
    "lefthook": "^1.11.14",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.3.0",
    "pnpm": "^10.12.4",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "wrangler": "^4.22.0"
  }
}
